@model IEnumerable<Keeltekooli.Models.Koolitus>

@{
    ViewBag.Title = "Koolitused";
}

<h2>@ViewBag.p</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Keelekursus.Nimetus)
        </th>
        <th>
            Opetaja
        </th>
        <th>
            Algus
        </th>
        <th>
           Lõpp
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hind)
        </th>
        <th>
            Õpilaste arv
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Keelekursus.Nimetus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opetaja.Nimi)
            </td>
            <td>
                @item.AlgusKuupaev.ToString("dd.MM.yyyy")
            </td>
            <td>
                @item.LoppKuupaev.ToString("dd.MM.yyyy")
            </td>
            <td>
                @($"{item.Hind:0.00} €")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxOsalejaid)
            </td>
            <td>
                @if (User.IsInRole("Opilane"))
                {
                    @Html.ActionLink("Registreerimines", "Create","Registreerimines", null, new { @class = "btn btn-outline-dark" })
                }
                @if(!User.IsInRole("Admin") && !User.IsInRole("Opilane") && !User.IsInRole("Opetaja"))
                {
                    @Html.ActionLink("Registreerimines", "Login", "Account", new {id = item.Id}, new { @class = "btn btn-outline-dark" })
                }
            </td>

            @if (User.IsInRole("Admin"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }

</table>
