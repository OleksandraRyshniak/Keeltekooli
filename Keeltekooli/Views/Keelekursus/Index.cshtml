@model IEnumerable<Keeltekooli.Models.Keelekursus>

@{
    ViewBag.Title = "Keelekursused";
}

<h2>Index</h2>
@if (User.Identity.IsAuthenticated)
{
<p>
    @Html.ActionLink("Lisa Kursus", "Create")
</p>}
<table class="table">
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(m => item.Nimetus)</td>
            <td>@Html.DisplayFor(m => item.Keel)</td>
            <td>@Html.DisplayFor(m => item.Tase)</td>
            <td>@Html.DisplayFor(m => item.Kirjeldus)</td>

            <td>
                @Html.ActionLink("Koolitused","Index", "Koolitus",new { keelekursusId = item.Id },null)
            </td>

            @if (User.Identity.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Muuda", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
        </tr>
    }
</table>
